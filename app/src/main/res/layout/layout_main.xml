<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/margin_sample_vertical"
        android:paddingEnd="@dimen/margin_menu_horizontal"
        android:paddingLeft="@dimen/margin_menu_horizontal"
        android:paddingRight="@dimen/margin_menu_horizontal"
        android:paddingStart="@dimen/margin_menu_horizontal"
        android:paddingTop="@dimen/margin_sample_vertical"
        >

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/statusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/statusSwitch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/statusSwitch"
            android:text="@string/status"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/statusDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/statusSwitch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/statusSwitch"
            android:layout_below="@+id/status_title"
            android:text="@string/status_running"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/margin_sample_vertical"
        android:paddingEnd="@dimen/margin_menu_horizontal"
        android:paddingLeft="@dimen/margin_menu_horizontal"
        android:paddingRight="@dimen/margin_menu_horizontal"
        android:paddingStart="@dimen/margin_menu_horizontal"
        android:paddingTop="@dimen/margin_sample_vertical"
        >

        <CheckBox
            android:id="@+id/residentCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/resident_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/residentCheckBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/residentCheckBox"
            android:text="@string/resident"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/resident_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/residentCheckBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/residentCheckBox"
            android:layout_below="@+id/resident_title"
            android:text="@string/resident_description"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingBottom="@dimen/margin_sample_vertical"
        android:paddingLeft="@dimen/margin_sample_horizontal"
        android:paddingRight="@dimen/margin_sample_horizontal"
        android:paddingTop="@dimen/margin_sample_vertical"
        >

        <include layout="@layout/notification"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/margin_sample_vertical"
        android:paddingEnd="@dimen/margin_menu_horizontal"
        android:paddingLeft="@dimen/margin_menu_horizontal"
        android:paddingRight="@dimen/margin_menu_horizontal"
        android:paddingStart="@dimen/margin_menu_horizontal"
        android:paddingTop="@dimen/margin_sample_vertical"
        >

        <TextView
            android:id="@+id/version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="@string/version"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/version_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/version_title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="1.1.1"
            />

    </RelativeLayout>
</LinearLayout>
